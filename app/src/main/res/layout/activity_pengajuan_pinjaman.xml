    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/box_main"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
        tools:layout_editor_absoluteX="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_login"
            android:elevation="5dp"
            android:hint="Jumlah Pengajuan Pinjaman"
            android:inputType="text"
            android:padding="15dp"
            android:paddingHorizontal="15dp"
            android:textAlignment="textStart"
            android:textColor="#FF6C6C6C"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,MissingConstraints,VisualLintTextFieldSize"
            tools:layout_editor_absoluteX="16dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_login"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputEditText2"
            tools:layout_editor_absoluteX="16dp" />


